<% title "Tasks" %>

<table>
  <tr>
    <th>Name</th>
    <th>Project</th>
    <th>Priority</th>
    <th>Status</th>
    <th>Description</th>
  </tr>
  <% for task in @tasks %>
    <tr>
      <td><%=h task.name %></td>
      <td><%=h task.project.name %></td>
      <td><%=h task.dis_status %></td>
      <td><%=h task.dis_priority %></td>
      <td><%=h task.description %></td>
      <td><%= link_to "Show", task %></td>
      <td><%= link_to "Edit", edit_task_path(task) %></td>
      <td><%= link_to "Destroy", task, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Task", new_task_path %></p>
